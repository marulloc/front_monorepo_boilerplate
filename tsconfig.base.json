{
    "compilerOptions": {
        "target": "es5", //
        "module": "commonjs", //
        "lib": ["DOM", "DOM.Iterable", "es2015"],
        "allowJs": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,

        "sourceMap": true,
        "noImplicitAny": false
    }

    //Refrences For Libs ...추후에
    // "references": []
}
